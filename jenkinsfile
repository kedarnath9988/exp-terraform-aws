pipeline{
    agent{
        label 'agent-01'
    }
    options{
        timeout(time:15, unit: "MINUTES")
        disableConcurrentBuilds()
    }
    

    stages{
        stage("init"){
            steps{
            
               sh  """
               echo hello this is in the init stage 
               
                 """
            }
            }
            stage("plan"){
                steps{
                  sh    """
                echo hello this is in the plan stage 
                """
                }
                }
            stage("Deploy"){
                steps{    
                  sh  """
                 echo hello this is in the Deploy stage
                """
                 }
            }
        }
    }
    post{
        always{
            echo  echo 'I will always say Hello again!'
        }
        failure{
            echo  echo 'I will failure only!'
        }
        success{
            echo  echo 'I will run  success !'
        }
        changed{
            echo ' there is change in the cureent build from the last build '
        }
        fixed{
            echo ' current pipeline is successful but the previous build is faulure'
        }

    }
